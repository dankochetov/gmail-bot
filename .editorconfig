root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,ts,jsx,tsx}]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{yml,yaml,json}]
charset = utf-8
indent_style = space
indent_size = 2

[*.md]
charset = utf-8
indent_style = tab
tab_width = 4

[.github/workflows]
charset = utf-8
indent_style = space
indent_size = 2
